{
  "name": "ULaval Extension",
  "description": "ULaval monPortail but good todo",
  "version": "1",
  "version_name": "1 todo",
  "manifest_version": 3,
  "icons": {
      "128": "./assets/img/popup.png"
  },
  "commands": {
    "_execute_action": { 
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "linux": "Ctrl+Shift+E",
        "windows": "Ctrl+Shift+E",
        "mac": "Alt+Shift+E"
      }
    }
  },
  "background": {
      "service_worker": "background.js"
  },
  "host_permissions": ["https://monportail.ulaval.ca/*", "https://sitescours.monportail.ulaval.ca/*"],
  "content_scripts": [
    {
      "matches": ["https://monportail.ulaval.ca/*", "https://sitescours.monportail.ulaval.ca/*", "https://login.microsoftonline.com/*"],
      "js":  [
        "./content/contentUtils.js",
        "./content/content.js"
      ]
    }
  ],
  "action": {
    "default_title": "Open ULaval menu...",
      "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ]
}